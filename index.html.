<script>
function checkPass() {
  let input = document.getElementById('pass').value.trim();
  if (input === "14/5/2025") {
    document.getElementById('lockScreen').style.display = 'none';
    document.getElementById('content').style.display = 'block';
  } else {
    alert("รหัสไม่ถูกนะจ๊ะ 🥺");
  }
}
</script>

